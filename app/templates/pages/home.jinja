{% extends 'pages/base.jinja' %}

{% block title %}
    Join
{% endblock %}

{% block content %}
    <article>
        <h2>Join as a player</h2>

        <form action="/join" method="POST">
            <fieldset role="group">
                <input name="name" placeholder="Name" required>
                <input type="submit" value="Join">
            </fieldset>
        </form>
    </article>
{% endblock %}